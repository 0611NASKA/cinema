<h2>管理者用ログイン</h2>
<% if flash.alert %><p class="alert"><%= flash.alert %></p><% end %>
<%= form_tag [:admin, :session], id: "admin_login_form" do %>
  <div>
    <label>管理者ID：</label>
    <input type="text" name="admin_login_id">
  </div>
  <div>
    <label>パスワード：</label>
    <input type = "password" name="admin_password">
  </div>
  <div>
    <input type="submit" value="ログイン">
  </div>
<% end %>
