<h2>ログイン</h2>
<% if flash.alert %><p class="alert"><%= flash.alert %></p><% end %>
<%= form_tag :session, id: "login_form" do %>
  <div>
    <label>ユーザID：</label>
    <input type="text" name="login_id">
  </div>
  <div>
    <label>パスワード：</label>
    <input type = "password" name="password">
  </div>
  <div>
    <input type="submit" value="ログイン">
  </div>
<% end %>
