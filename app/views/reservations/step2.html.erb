<% @page_title = "決済情報入力" %>

<h2>決済情報の確認をお願いします</h2>

<%= form_tag([@reservation, :step3], method: :post) do %>
  <table class="attr">
    <tr>
      <th>ログインID</th>
      <td><%= @member.login_id %></td>
    </tr>
    <tr>
      <th>氏名</th>
      <td><%= @member.name %></td>
    </tr>
    <tr>
      <th>誕生日</th>
      <td><%= @member.birthday %></td>
    </tr>
    <tr>
      <th>電話番号</th>
      <td><%= @member.tel %></td>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <td><%= @member.email %></td>
    </tr>
    <tr>
      <th>決済情報</th>
      <td><%= @member.payment %></td>
    </tr>
  </table>
  <%= submit_tag("次へ") %>
<% end %>
