<% @page_title = "映画一覧" %>

<%= form_tag :search_movies, method: :get, class: "search" do %>
  <%= text_field_tag "q", params[:q] %>
  <%= submit_tag "検索" %>
<% end %>

<% if @movies.present? %>
  <table class = "list">
    <thead>
      <tr>
        <th>作品名</th>
        <th>上映時間</th>
      </tr>
    </thead>
    <tbody>
      <% @movies.each do |movie| %>
        <tr>
          <td><%= link_to movie.title, movie %></td>
          <td><%= movie.screening_time %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @movies %>
<% else %>
  <p>作品情報がありません。</p>
<% end %>
