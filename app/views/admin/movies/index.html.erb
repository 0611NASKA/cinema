<% @page_title = "映画一覧" %>

<div class="toolbar"><%= link_to "作品追加", :new_admin_movie %>

<% if @movies.present? %>
  <table class = "list">
    <thead>
      <tr>
        <th>作品番号</th>
        <th>作品名</th>
      </tr>
    </thead>
    <tbody>
      <% @movies.each do |movie| %>
        <tr>
          <td><%= movie.id %></td>
          <td><%= link_to movie.title, [:admin, movie] %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>作品情報がありません。</p>
<% end %>
